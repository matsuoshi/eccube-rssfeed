<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
    <channel>
        <title>{{ BaseInfo.shop_name }}</title>
        <link>{{ url('homepage') }}</link>
        <lastBuildDate>{{ "now" | date('D, d M y H:i:s O') }}</lastBuildDate>
        <atom:link href="{{ url('sample_rss_feed_news') }}" rel="self"/>

        {% for article in news %}
            <item>
                <title>{{ article.title }}</title>
                {% if article.url %}
                    <link>{{ article.url }}</link>
                {% else %}
                    <link>{{ url('homepage') }}</link>
                {% endif %}
                <pubDate>{{ article.publish_date|date('D, d M y H:i:s O') }}</pubDate>
                <guid>{{ url('homepage') }}rss/news/{{ article.id }}</guid>
                <description><![CDATA[ {{ article.description|raw }} ]]></description>
            </item>
        {% endfor %}
    </channel>
</rss>
